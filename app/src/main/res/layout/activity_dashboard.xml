<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Common.Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/swap_user"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_user"
                app:tint="@color/black"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/swap_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textAlignment="center"
                android:text="Users"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="WELCOME"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/muli"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Kushagra"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/muli"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Tell us how are you doing."
            android:layout_gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/muli"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="15dp"
            app:cardCornerRadius="9dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/offWhite"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/feeling_happy_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/emoji_happy"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/feeling_happy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I Feel Fit and Healthy"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textSize="25sp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/muli"
                    android:layout_toEndOf="@id/feeling_happy_icon" />

                <Button
                    android:id="@+id/feeling_healthy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="callFitActivity"
                    android:background="@color/transparent"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="15dp"
            app:cardCornerRadius="9dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/offWhite"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/feeling_sick_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/emoji_sad"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/feeling_sick_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I Feel Sick and Unhealthy"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textSize="23sp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/muli"
                    android:layout_toEndOf="@id/feeling_sick_icon" />

                <Button
                    android:id="@+id/feeling_sick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="callUnfitActivity"
                    android:background="@color/transparent"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="15dp"
            app:cardCornerRadius="9dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/offWhite"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/feeling_confused_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/emoji_confused"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/feeling_confused_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I'm not sure"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textSize="25sp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/muli"
                    android:layout_toEndOf="@id/feeling_confused_icon" />

                <Button
                    android:id="@+id/feeling_confused"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

    </LinearLayout>

</ScrollView>